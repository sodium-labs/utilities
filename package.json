{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "utilities",
    "version": "0.0.0",
    "private": true,
    "description": "Useful TypeScript utilities",
    "bugs": {
        "url": "https://github.com/sodiumlabs/utilities/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sodiumlabs/utilities.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "lint": "turbo run lint",
        "fmt": "oxfmt && turbo run fmt",
        "test": "turbo run test",
        "docs": "turbo run docs"
    },
    "devDependencies": {
        "oxfmt": "^0.23.0",
        "oxlint": "^1.39.0",
        "tsup": "^8.5.1",
        "turbo": "^2.7.4",
        "typescript": "^5.9.3",
        "vitest": "^4.0.17"
    },
    "engines": {
        "node": ">=20"
    },
    "packageManager": "pnpm@10.25.0"
}
