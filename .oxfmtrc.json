{
    "$schema": "./node_modules/oxfmt/configuration_schema.json",
    "printWidth": 120,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "proseWrap": "never",
    "ignorePatterns": ["node_modules", ".turbo", "dist", "dist-docs", "package-lock.json", "ms/README.md"]
}
